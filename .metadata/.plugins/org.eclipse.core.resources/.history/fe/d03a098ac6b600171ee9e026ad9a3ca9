
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Angular js</title>
<script src="./angular.min.js"></script>

<script>
            var app = angular.module("ContactManagement", []);

            
            
            //Controller Part
            app.controller("ContactController", function($scope, $http) {
            
            
            
            /* Private Methods */
            //HTTP GET- get all contacts collection
            function _refreshcontactData() {
                $http({
                    method : 'GET',
                    url : 'http://localhost:8080/getAll',
					headers: {
    'Content-Type': 'application/json'
}
                }).then(function successCallback(response) {
                    $scope.contacts = response.data;
                }, function errorCallback(response) {
                    console.log(response.statusText);
                });
            }
     
            function _success(response) {
                _refreshcontactData();
                _clearFormData()
            }
     
            function _error(response) {
                console.log(response.statusText);
            }
     
            //Clear the form
            function _clearFormData() {
                $scope.contactForm.id = -1;
                $scope.contactForm.name = "";
                $scope.contactForm.phone_number = "";
                $scope.contactForm.address = "";
            
            };
        });

            
            
            
            
            </script>
 
</head>


    <body ng-app="ContactManagement" ng-controller="ContactController">
         <h1>
           AngularJS Restful web services example using $http
        </h1> 
        <table>
            <tr>
              
                <th>ContactName</th>
                <th>ContactPhoneNumber</th>
				<th>address</th>
                <th>Operations       </th>
               
            </tr>
 
            <tr ng-repeat="contact in contacts">
               
				<td> {{ contact.Name }}</td>
				<td >{{ contact.phone_number }}</td>  
				<td >{{ contact.address }}</td>  
                
                <td><a ng-click="editContact(contact)" class="blue-button">Edit</a> | <a ng-click="deleteContact(contact)" class="red-button">Delete</a></td>
            </tr>

            <tr>
              
				<td> {{ testname }}</td>
				<td >{{ testphone_number }}</td>  
				<td >{{2+2}}</td>  
               
            </tr>
 
        </table>
 
       
 
       
      
  </body>

</html>
